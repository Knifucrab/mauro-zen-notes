{
  "name": "mauro-zen-notes-backend",
  "version": "1.0.0",
  "description": "REST API for Zen Notes application",
  "main": "index.js",
  "scripts": {
    "dev": "node server.js",
    "dev:vercel": "vercel dev",
    "dev:watch": "nodemon server.js",
    "start": "node server.js",
    "start:prod": "NODE_ENV=production node server.js",
    "build": "prisma generate",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:seed": "node scripts/seed.js",
    "db:reset": "prisma db push --force-reset && npm run db:seed",
    "test": "node test-db.js && echo Running API tests... && node comprehensive-test.js",
    "vercel-build": "prisma generate && prisma db push --accept-data-loss"
  },
  "keywords": ["express", "notes", "api", "prisma", "vercel"],
  "author": "Mauro",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^5.7.1",
    "@prisma/client": "^5.7.1",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "@vercel/node": "^3.0.12",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
